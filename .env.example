# AWS S3（如果需要）
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# 第三方服务
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# 开发环境配置
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
DEBUG=true

# 生产环境配置（部署时使用）
# NODE_ENV=production
# NEXT_PUBLIC_APP_ENV=production
# DEBUG=false

# 其他配置
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00Z

# 国际化
NEXT_PUBLIC_DEFAULT_LOCALE=zh-CN
NEXT_PUBLIC_SUPPORTED_LOCALES=zh-CN,en-US,ja-JP

# 功能开关
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PWA=false

# 性能配置
NEXT_PUBLIC_IMAGE_DOMAINS=yourdomain.com,cdn.yourdomain.com
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# 安全配置
CSP_REPORT_URI=https://yourdomain.com/api/csp-report
HSTS_MAX_AGE=31536000

# 监控和日志
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
LOG_FORMAT=json

# 缓存配置
CACHE_TTL=3600
CDN_CACHE_TTL=86400

# 限流配置
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 搜索配置（如果使用Algolia等）
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_SEARCH_API_KEY=your_search_api_key
ALGOLIA_ADMIN_API_KEY=your_admin_api_key
ALGOLIA_INDEX_NAME=your_index_name